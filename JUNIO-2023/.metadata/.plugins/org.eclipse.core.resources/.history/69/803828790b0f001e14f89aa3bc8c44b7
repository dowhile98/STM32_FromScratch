#ifndef BSP_DISPLAY_H_
#define BSP_DISPLAY_H_

/*Includes ----------------------------------------------------*/
#include <stdint.h>
/*Include s----------------------------------------------------*/
#define DP_ON		1
#define DP_OFF		0
/*Typedef -----------------------------------------------------*/
typedef enum{
	DIGIT1,
	DIGIT2
}Digit_t;

typedef struct{
	uint8_t *pframe;
}Display_t;
/*Function prototype ------------------------------------------*/
void display_write(uint8_t data, uint8_t digit, uint8_t dp);

void display_init(Display_t *obj, uint8_t *frame);

void display_setVal_ex(Display_t *obj, uint8_t val, uint8_t dp);

#endif /* BSP_DISPLAY_H_ */
