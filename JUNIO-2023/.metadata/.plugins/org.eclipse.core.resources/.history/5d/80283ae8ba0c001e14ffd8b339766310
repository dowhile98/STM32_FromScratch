int __io_putchar(int ch){
	//salida
	ITM_SendChar(ch);

	return ch;
}
/*main function -----------------------------------------------*/
int main(void)
{
	uint32_t ticks;
	GPIO_ConfigTypedef_t lcdPin;
	//PD12->salida
	RCC->AHB1ENR |= RCC_AHB1ENR_GPIODEN;
	GPIOD->MODER &=~ GPIO_MODER_MODE12;
	GPIOD->MODER |= GPIO_MODER_MODE12_0;
	/**
	 * ticks = 16MHz * 0.001
	 * ticks = 16000
	 */
	ticks = 16000;
	SysTick_Init(ticks);

	ticks = GetTicks();
    /* Loop forever */
	for(;;){
		//leer adc
		if((GetTicks() - ticks)>= 100){
			ticks = GetTicks();
			GPIOD->ODR ^= GPIO_ODR_OD12;
		}
		//mostar en la pantalla contenido


		//lectora de botones



	}
}
