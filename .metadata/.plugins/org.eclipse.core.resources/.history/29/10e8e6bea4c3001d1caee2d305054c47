/*Includes -------------------------------------------------------------------*/
#include <stdint.h>
#include <stdio.h>
#include "stm32f4xx.h"
#include <stdbool.h>
#include "defines.h"
#include "delay.h"
#include "button.h"
/*Typedef --------------------------------------------------------------------*/


/*Defines ------------------------------------------------------------------- */
#define LED		D , 12
#define SW		A , 0

/*Global variables ---------------------------------------------------------- */
Button_t button1;
uint32_t count = 0;
/*function prototype ---------------------------------------------------------*/

void button1_callback(void);
/*main function --------------------------------------------------------------*/

int main(void)
{
	printf("EJEMPLO GPIO1\r\n");
	printf("%s, %s\r\n", __DATE__, __TIME__);
	//PD12 (LED1)
	RCC->AHB1ENR |= GPIOX_CLOCK(LED) | GPIOX_CLOCK(SW);
	GPIOX_MODER(MODE_OUT, LED);
	GPIOX_OTYPER(MODE_OT_PP, LED);
	GPIOX_OSPEEDR(MODE_SPD_VHIGH, LED);
	GPIOX_PUPDR(MODE_PU_NONE, LED);

	//PA0
	GPIOX_MODER(MODE_DIGITAL_INPUT, SW);
	GPIOX_PUPDR(MODE_PU_NONE, SW);
	//systick
	SysTickInit();

	//inicializar
	ButtonInit(&button1, GPIOA, 0, &button1_callback);
    /* Loop forever */
	for(;;){
		ButtonRead(&button1, PIN_TO_LOW);


	}
}

/*Function definition ---------------------------------------------------------*/
void button1_callback(void){
	GPIOX_ODR(LED) ^= 0x1;
	count++;
	printf("pulsador se presiono..%u\r\n", count);
}





int __io_putchar(int ch){
	ITM_SendChar(ch);
	return ch;
}
