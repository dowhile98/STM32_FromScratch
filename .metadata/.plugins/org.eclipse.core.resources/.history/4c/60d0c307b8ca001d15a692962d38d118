#include "buttonV2.h"

void Button_InitTime(Button_Time_t *BT, GPIO_TypeDef *GPIOx, uint8_t pin, void (*f)(void)){
	BT->GPIO = GPIOX;
	BT->pin = pin;
	BT->callback = f;
	//estado inicial
	BT->pulseCount = 0;
	BT->state = BT_INIT_STATE;
	return;
}


void Button_Update(Button_Time_t *BT){
	switch(BT->state){
	case BT_INIT_STATE:
		break;
	case BT_HIGH_STATE:
		break;
	case BT_LOW_STATE:
		break;
	case BT_DEBOUNCE_STATE:
		break;
	case BT_TIME_VERIFY:
		break;
	case BT_PULSE_COUNT:
		break;
	}
}
