#ifndef COMPONENTS_BUTTONV2_H_
#define COMPONENTS_BUTTONV2_H_

/*Includes -------------------------------------------------- */
#include "stm32f4xx.h"
#include <stdbool.h>

/*Typedef ---------------------------------------------------*/
typedef struct{
	GPIO_TypeDef *GPIO;
	uint8_t pin;
	uint8_t state;
	uint32_t ticks;
	uint8_t pulseCount;
	void (*callback)(void);
}Button_Time_t;


typedef enum{
	BT_INIT_STATE,
	BT_HIGH_STATE,
	BT_LOW_STATE,
	BT_PULSE_COUNT,
	BT_TIME_VERIFY
};
/*Function prototype ----------------------------------------*/
void Button_InitTime(Button_Time_t *BT, GPIO_TypeDef *GPIOx, uint8_t pin, void (*f)(void));



#endif /* COMPONENTS_BUTTONV2_H_ */
