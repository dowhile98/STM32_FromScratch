#include <stdint.h>
#include "Config.h"
#include "wizchip_conf.h"
/*Defines -------------------------------------------------*/
#define SPI1_SCK		A, 5
#define SPI1_MOSI		A, 7
#define SPI1_MISO		A, 6
#define SPI1_NSS		B, 6
#define ETH_RST			C, 7

/*Global variables ----------------------------------------*/

/*Function prototype --------------------------------------*/
void SPI1_Init(void);

uint8_t w5100_ll_read_byte(void);
void w5100_ll_write_byte(uint8_t byte);
